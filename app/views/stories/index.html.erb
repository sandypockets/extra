<h1 class="section-heading">Stories</h1>

<!-- Topic filtering-->
<nav class="topics">
  <%= link_to 'All stories', root_path %>
  <%= active_link_to 'Tutorials', root_path(topic: 'Tutorials'), active: { topic: 'Tutorials' } %>
  <%= active_link_to 'Deep Dives', root_path(topic: 'Deep Dives'), active: { topic: 'Deep Dives' } %>
  <%= active_link_to 'Ideas', root_path(topic: 'Ideas'), active: { topic: 'Ideas' } %>
</nav>

<div class="stories-index-container">
  <div class="stories-index-content">

    <div class="index-stories">
      <% @stories.each do |story| %>

        <div class="story-card">
          <h3><%= link_to story.title, story_path(story) %></h3>
          <p><%= story.body %></p>
        </div>

      <% end %>
    </div>

  </div>
</div>

<div class="hero-line mid"></div>