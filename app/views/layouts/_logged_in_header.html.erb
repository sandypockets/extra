<header>
  <div class="main-header-container">

    <div class="logo-tagline-container">
      <h1><%= link_to 'Extra', root_path, class: 'logo' %></h1>
      <h2 class="tagline">Hi, <%= @current_user.first_name.capitalize %></h2>
    </div>

    <nav class="header-nav-links nav-links">

      <% if @current_user.is_admin? %>
        <%= link_to 'Admin', admin_stories_path %>
      <% end %>

      <%= link_to 'Read', root_path %>
      <%= link_to 'Write', new_story_path %>
      <%= link_to 'Profile', edit_user_path(@current_user) %>
      <%= link_to 'Logout', session_path, method: :delete %>
    </nav>

  </div>
</header>